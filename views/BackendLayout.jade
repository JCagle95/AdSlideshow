    block ExtraHeader

  body
    div.page
      div.page-main
        div.header.py-4
          div.container
            div.d-flex
              a.header-brand(href="/administration")
                img(src="/images/banner_logo.png", height="50")
              div.d-flex.order-lg-2.ml-auto
                div.nav-item.d-none.d-md-flex
                  a(href="/slideshow/#{UserSlides}").btn.btn-outline-primary View Slideshow
                div.dropdown(style="padding-top: 8px;")
                  a(href="#", data-toggle="dropdown", style="").nav-link.pr-0.leading-none
                    span.avatar(style="background-image: url(/images/profile.png)")
                    span.ml-2.d-none.d-lg-block
                      span.text-default= UserAccount
                      small.text-muted.d-block.mt-1 Administrator
                  div.dropdown-menu.dropdown-menu-right.dropdown-menu-arrow
                    a.dropdown-item(href="#") Profile
                    a.dropdown-item(href="/administration/logout") Logout

        div#headerMenuCollapse.header.collapse.d-lg-flex.p-0
          div.container
            div.row.align-items-center
              div.col-lg.order-lg-first
                ul.nav.nav-tabs.border-0.flex-column.flex-lg-row
                  li.nav-item
                    a(href="/administration").nav-link
                      i.fe.fe-home
                      | Home
                  li.nav-item
                    a(href="/administration/gallery").nav-link
                      i.fe.fe-image
                      | Gallery

        block Content

      footer.footer
        div.container
          div.row.align-items-center.flex-row-reverse
            div.col-auto.ml-lg-auto
              div.row.align-items-center
                div.col-auto
                  ul.list-inline.list-inline-dots.mb-0
                    li.list-inline-item
                      a(href="#") Documentation
                    li.list-inline-item
                      a(href="#") FAQ
                div.col-auto
                  a.btn.btn-outline-primary.btn-sm(href="https://github.com/tabler/tabler") Template Source Code

